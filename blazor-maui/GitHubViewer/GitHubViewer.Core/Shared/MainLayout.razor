@inherits LayoutComponentBase

<MudRTLProvider>
    <MudThemeProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudLayout>
        <MudAppBar>
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => ToggleDrawer())" />
            <MudText Typo="Typo.h5" Class="ml-3">GitHub Viewer</MudText>
        </MudAppBar>
        <MudDrawer @bind-Open="@_isDrawerOpen" ClipMode="DrawerClipMode.Always">
            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</MudRTLProvider>

@code {
    bool _isDrawerOpen = false;

    void ToggleDrawer()
    {
        _isDrawerOpen = !_isDrawerOpen;
    }
}
